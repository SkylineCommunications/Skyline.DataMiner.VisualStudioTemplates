{
  "$schema": "http://json.schemastore.org/template",
  "author": "Skyline Communications",
  "classifications": [ "DataMiner" ],
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "identity": "Skyline.DataMiner.Package.Project.Template",
  "name": "DataMiner Package Project",
  "shortName": "dataminer-package-project",
  "sourceName": "$SCRIPTNAME$",
  "symbols": {
    "Author": {
          "type": "parameter",
          "datatype": "string",
          "defaultValue": "",
          "replaces": "$AUTHOR$",
          "description": "The author."
    },
    "IncludeCatalogInformation": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Include Catalog Information.",
	  "defaultValue": "true"
    },     
    "CreateDataMinerPackage": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Allows this project to create a .dmapp. This can be adjusted afterwards as well.",
	  "defaultValue": "true"
    },    
    "IncludeGitHubWorkflow": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Include GitHub Workflow. Selecting Skyline will add a reusable workflow provided by Skyline that includes additional quality checks.",
      "choices":[
        {"choice":"None", "description":"None"},
        {"choice":"Basic", "description":"Basic"},
        {"choice":"Skyline", "description":"Skyline"}]
    },
    "InitialVersionDate": {
      "type": "generated",
      "generator": "now",
      "replaces": "$INITIALVERSIONDATE$",
      "parameters": {
        "format": "dd/MM/yyyy"
      }
     },
    "Namespace": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "invalidChars",
      "replaces": "$NAMESPACE$"
    },
    "WillCreateSolution": {
      "type": "bind",
      "binding": "context:createsolutiondirectory"
    }
  },
  "forms": {
    "invalidChars": {
      "identifier": "replace",
      "pattern": "([\\-_\\.\\ ])",
      "replacement": ""
    }
  },
  "guids": [
    "4c5d14ab-9cec-4c0b-8b58-af379fdb4123"
  ],
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ "./[Content_Types].xml", "src/.vs/**", ".template_config/**", "[Content_Types].xml", "_rels/**", "*.nuspec", "*.nupkg",".github/**" ]
        },
        {
          "condition": "IncludeCatalogInformation",
          "include": [ "CatalogInformation/**", "Properties/PublishProfiles/**" ]
        },
        {
          "condition": "!IncludeCatalogInformation",
          "exclude": [ "CatalogInformation/**", "Properties/PublishProfiles/**" ]
        }
      ]
    },{
      "source": ".github",
      "target": "../.github/",
      "condition": "WillCreateSolution",
      "modifiers": [
        {
          "condition": "IncludeGitHubWorkflow",
          "include": [ ".github/**" ]
        },
        {
          "condition": "!IncludeGitHubWorkflow",
          "exclude": [ ".github/**"]
        }
      ]
    },
    {
      "source": ".github",
      "condition": "!WillCreateSolution",
      "modifiers": [
        {
          "condition": "IncludeGitHubWorkflow",
          "include": [ ".github/**" ]
        },
        {
          "condition": "!IncludeGitHubWorkflow",
          "exclude": [ ".github/**"]
        }
      ]
    }
  ]
}