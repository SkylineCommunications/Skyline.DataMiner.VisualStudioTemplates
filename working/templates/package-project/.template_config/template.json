{
  "$schema": "http://json.schemastore.org/template",
  "author": "Skyline Communications",
  "classifications": [ "DataMiner" ],
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "identity": "Skyline.DataMiner.Package.Project.Template",
  "name": "DataMiner Package Project",
  "shortName": "dataminer-package-project",
  "sourceName": "$SCRIPTNAME$",
  "symbols": {
    "Author": {
          "type": "parameter",
          "datatype": "string",
          "defaultValue": "",
          "replaces": "$AUTHOR$",
          "description": "The author."
    },
    "IncludeCatalogInformation": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Include Catalog Information.",
	    "defaultValue": "true"
    },     
    "CreateDataMinerPackage": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Enables this project to generate a .dmapp. This setting can be modified later if needed.",
	    "defaultValue": "true",
      "replaces": "$CREATEPACKAGE$"
    },    
    "IncludeGitHubWorkflow": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Add/Overwrite a GitHub Workflow: Basic (build, test, publish) or Complete (Skyline Quality Gate).",
      "choices":[
        {"choice":"None", "description":"None"},
        {"choice":"Basic", "description":"Basic (build, test, publish)"},
        {"choice":"Complete", "description":"Complete (Skyline Quality Gate)"}]
    },
    "Namespace": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "invalidChars",
      "replaces": "$NAMESPACE$"
    },
    "WillCreateSolution": {
      "type": "bind",
      "binding": "context:createsolutiondirectory"
    },
    "IsExclusive": {
      "type": "bind",
      "binding": "context:isexclusive"
    }
  },
  "forms": {
    "invalidChars": {
      "identifier": "replace",
      "pattern": "([\\-_\\.\\ ])",
      "replacement": ""
    }
  },
  "guids": [
    "4c5d14ab-9cec-4c0b-8b58-af379fdb4123"
  ],
  "sources": [
    {
      "exclude": [ "./[Content_Types].xml", "src/.vs/**", ".template_config/**", "[Content_Types].xml", "_rels/**", "*.nuspec", "*.nupkg"]
    },{
      "source": "../SharedItems/CatalogInformation",
      "target": "CatalogInformation",
      "condition": "IncludeCatalogInformation"
    },{
      "source": "../SharedItems/Properties",
      "target": "Properties",
      "condition": "IncludeCatalogInformation"
    },{
      "source": "../SharedItems/.github",
      "target": "../.github/",
      "exclude": [ "**" ],
      "condition": "(WillCreateSolution || !IsExclusive) && !(IncludeGitHubWorkflow == None)",
      "modifiers": [
        {
          "condition": "IncludeGitHubWorkflow == Basic",
          "include": [ "workflows/basic.yml" ]
        },
        {
          "condition": "IncludeGitHubWorkflow == Complete",
          "include": [ "workflows/complete.yml" ]
        }
      ]
    },{
      "source": "../SharedItems/.github",
      "target": ".github/",
      "exclude": [ "**" ],
      "condition": "!WillCreateSolution && !(IncludeGitHubWorkflow == None) && IsExclusive",
      "modifiers": [
        {
          "condition": "IncludeGitHubWorkflow == Basic",
          "include": [ "workflows/basic.yml" ]
        },
        {
          "condition": "IncludeGitHubWorkflow == Complete",
          "include": [ "workflows/complete.yml" ]
        }
      ]
    },{
      "source": "../SharedItems/StyleCopAndEditor",
      "target": "../",
      "include": [ "**" ],
      "condition": "(WillCreateSolution || !IsExclusive)"
    }
  ]
}