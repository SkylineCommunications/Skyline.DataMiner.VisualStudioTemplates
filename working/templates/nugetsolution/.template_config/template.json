{
  "$schema": "http://json.schemastore.org/template",
  "author": "Skyline Communications",
  "classifications": [ "DataMiner" ],
  "tags": {
    "language": "C#",
	  "type": "solution",
    "editorTreatAs":"solution"
  },
  "identity": "Skyline.DataMiner.NuGetPackageSolution",
  "name": "DataMiner NuGet Package Solution",
  "shortName": "dataminer-nuget-solution",
  "sourceName": "DataMinerNuGetPackageSolutionTemplate",
  "symbols": {
    "PackageId": {
        "type": "parameter",
        "datatype": "string",
        "defaultValue": "Skyline.DataMiner.Utils.NAME",
        "replaces": "$PackageId$",
        "description": "The ID of the package. Must start with \"Skyline.DataMiner.\"",
        "isRequired": true
    },
    "ProjectName": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "replaces": "$ProjectName$",
      "FileRename": "ClassLibrary1",
      "parameters": {
        "source": "PackageId",
        "steps": [
          {
            "regex": "^Skyline\\.DataMiner\\.",
            "replacement": ""
          },
          {
            "regex": "test$",
            "replacement": "[/Replaced]"
          }
        ]
      }
    },
    "Description": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "$PackageDescription$",
      "description": "A short description about this NuGet package.",
      "isRequired": true
    },
    "LicenseType": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Skyline",
      "description": "The type of license applicable for this package.",
      "isRequired": true,
      "choices": [
        {
          "choice": "Skyline",
          "description": "Skyline license"
        },
        {
          "choice": "MIT",
          "description": "MIT license"
        }
      ]
    },
    "GitRepoUrl": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "$GitRepoUrl$",
      "description": "The URL of the Git repository. Leave empty if not hosted."
    },
    "isSkylineLicense": {
      "type": "computed",
      "value": "LicenseType == \"Skyline\""
    },
    "isMitLicense": {
      "type": "computed",
      "value": "LicenseType == \"MIT\""
    },
    "hasGitRepoUrl": {
      "type": "computed",
      "value": "GitRepoUrl != \"\""
    },
    "CopyrightYear": {
      "type": "generated",
      "generator": "now",
      "replaces": "$COPYRIGHTYEAR$",
      "parameters": {
        "format": "yyyy"
      }
    }
  },
    "guids": [
    "DF04BB47-9C16-43F0-891A-D0FDEB7FDA3F",
    "A5C42DF2-BA32-4745-BE0D-6B58D55BE6C3"
  ],
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ "./[Content_Types].xml", "src/.vs/**", ".template_config/**", "[Content_Types].xml", "_rels/**", "*.nuspec", "*.nupkg", "package/**" ]
        }
      ]
    }
  ]
}