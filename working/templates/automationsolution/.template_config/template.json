  "symbols": {
    "ScriptName": {
        "type": "parameter",
        "datatype": "string",
        "defaultValue": "",
        "replaces": "$SCRIPTNAME$",
		"FileRename": "$SCRIPTNAME$",
        "description": "The name of the Automation script.",
		    "isRequired": true
    },
    "Author": {
          "type": "parameter",
          "datatype": "string",
          "defaultValue": "SKYLINE2\\XXX",
          "replaces": "$AUTHOR$",
          "description": "The domain name of the author."
      },
    "CopyrightYear": {
      "type": "generated",
      "generator": "now",
      "replaces": "$COPYRIGHTYEAR$",
      "parameters": {
        "format": "yyyy"
      }
    },
    "InitialVersionDate": {
      "type": "generated",
      "generator": "now",
      "replaces": "$INITIALVERSIONDATE$",
      "parameters": {
        "format": "dd/MM/yyyy"
      }
	  },
    "AuthorVersionHistory": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "replaces": "$AUTHORVERSIONHISTORY$",
      "parameters": {
        "source": "Author",
        "steps": [
          {
            "regex": "^SKYLINE2\\\\(.*?)$",
            "replacement": "$1"
          }
        ]
      }
	  }
